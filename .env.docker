# Database
DATABASE_URL="postgresql://securesnap:securesnap_dev_password@postgres:5432/securesnap?schema=public"

# Redis
REDIS_URL="redis://redis:6379"

# JWT Secrets
JWT_SECRET="dev_jwt_secret_change_in_production_32chars"
JWT_REFRESH_SECRET="dev_jwt_refresh_secret_change_in_production"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Encryption
ENCRYPTION_KEY="dev_encryption_key_32_characters_"

# Server
PORT=5000
NODE_ENV=development

# Client URL
CLIENT_URL="http://localhost:3000"

# Email (for production, use proper SMTP)
EMAIL_FROM="noreply@securesnap.local"
SMTP_HOST="localhost"
SMTP_PORT=1025
SMTP_USER=""
SMTP_PASS=""

# AWS S3 (for production)
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="ca-central-1"
S3_BUCKET_NAME="securesnap-photos"

# Sentry (for error tracking in production)
SENTRY_DSN=""
SENTRY_RELEASE=""
SENTRY_ENVIRONMENT="development"

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# 2FA
TWO_FACTOR_APP_NAME="SecureSnap"
TWO_FACTOR_WINDOW=1

# Storage limits (in bytes)
DEFAULT_STORAGE_QUOTA=5368709120
MAX_FILE_SIZE=52428800